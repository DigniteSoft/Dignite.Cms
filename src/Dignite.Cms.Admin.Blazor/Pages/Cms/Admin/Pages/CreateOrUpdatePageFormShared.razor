@using Dignite.Cms.Admin.Pages
@using Dignite.Cms.Localization
@using Volo.Abp.BlazoriseUI.Components.ObjectExtending
@using Microsoft.Extensions.Localization
@inherits ComponentBase
@code {
    [Parameter] public PageCreateOrUpdateDtoBase Data { get; set; }

    [Parameter] public AbpBlazorMessageLocalizerHelper<CmsResource> LH { get; set; }
    [Parameter] public IStringLocalizer L { get; set; }
}

<input type="hidden" name="ParentId" @bind-value="@Data.ParentId"/>
<Blazorise.Validation MessageLocalizer="@LH.Localize">
    <Blazorise.Field>
        <Blazorise.FieldLabel>@L["DisplayName:Title"]</Blazorise.FieldLabel>
        <Blazorise.TextEdit @bind-Text="@Data.Title" Autofocus="true">
            <Feedback>
                <Blazorise.ValidationError/>
            </Feedback>
        </Blazorise.TextEdit>
    </Blazorise.Field>
</Blazorise.Validation>
<Blazorise.Validation MessageLocalizer="@LH.Localize">
    <Blazorise.Field>
        <Blazorise.FieldLabel>@L["DisplayName:Name"]</Blazorise.FieldLabel>
        <Blazorise.TextEdit @bind-Text="@Data.Name">
            <Feedback>
                <Blazorise.ValidationError/>
            </Feedback>
        </Blazorise.TextEdit>
    </Blazorise.Field>
</Blazorise.Validation>
<Blazorise.Validation MessageLocalizer="@LH.Localize">
    <Blazorise.Field>
        <Blazorise.FieldLabel>@L["DisplayName:Description"]</Blazorise.FieldLabel>
        <Blazorise.TextEdit @bind-Text="@Data.Description">
            <Feedback>
                <Blazorise.ValidationError/>
            </Feedback>
        </Blazorise.TextEdit>
    </Blazorise.Field>
</Blazorise.Validation>
<Blazorise.Validation MessageLocalizer="@LH.Localize">
    <Blazorise.Field>
        <Blazorise.FieldLabel>@L["DisplayName:TemplateFile"]</Blazorise.FieldLabel>
        <Blazorise.TextEdit @bind-Text="@Data.TemplateFile">
            <Feedback>
                <Blazorise.ValidationError/>
            </Feedback>
        </Blazorise.TextEdit>
    </Blazorise.Field>
</Blazorise.Validation>
<Blazorise.Validation MessageLocalizer="@LH.Localize">
    <Blazorise.Field>
        <Blazorise.FieldLabel>@L["DisplayName:PermissionName"]</Blazorise.FieldLabel>
        <Blazorise.TextEdit @bind-Text="@Data.PermissionName">
            <Feedback>
                <Blazorise.ValidationError/>
            </Feedback>
        </Blazorise.TextEdit>
    </Blazorise.Field>
</Blazorise.Validation>
<Blazorise.Field>
    <Blazorise.Check TValue="bool" @bind-Checked="Data.IsActive">@L["DisplayName:IsActive"]</Blazorise.Check>
</Blazorise.Field>